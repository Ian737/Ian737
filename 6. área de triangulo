#include <stdio.h>

int main() {
    float base, altura, area;

    printf("Ingrese la base del tri치ngulo: ");
    scanf("%f", &base);

    printf("Ingrese la altura del tri치ngulo: ");
    scanf("%f", &altura);

    area = 0.5 * base * altura;

    printf("El 치rea del tri치ngulo es: [%.2f] unidades cuadradas\n", area);

    return 0;
}
