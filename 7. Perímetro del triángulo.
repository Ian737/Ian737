#include <stdio.h>

int main() {
    float lado1, lado2, lado3, perimetro;

    // Pedir al usuario los lados del triángulo
    printf("Ingrese la longitud del primer lado: ");
    scanf("%f", &lado1);

    printf("Ingrese la longitud del segundo lado: ");
    scanf("%f", &lado2);

    printf("Ingrese la longitud del tercer lado: ");
    scanf("%f", &lado3);

    // Calcular el perímetro
    perimetro = lado1 + lado2 + lado3;

    // Mostrar el resultado
    printf("El perímetro del triángulo es: \[%.2f\]\n", perimetro);

    return 0;
}
